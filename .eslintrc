{
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "script"
  },
  "env": {
    "browser": true,
    "es6": true,
    "prototypejs": true
  },
  "rules": {
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "strict": 0,
    "quotes": [
      "error",
      "single"
    ],
    "no-use-before-define": [
      "error",
      {
        "variables": true,
        "functions": true,
        "classes": true
      }
    ]
  }
}